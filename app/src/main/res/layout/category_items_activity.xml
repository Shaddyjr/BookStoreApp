<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/category_items_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--EMPTY DATABASE LAYOUT-->
    <RelativeLayout
        android:id="@+id/emptyDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/emptyBox"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/empty_box" />

        <TextView
            android:id="@+id/noItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emptyBox"
            android:layout_centerHorizontal="true"
            android:text="There are no items"
            android:textSize="32sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noItems"
            android:layout_centerHorizontal="true"
            android:paddingTop="18dp"
            android:text="Add some by using the button at the bottom"
            android:textAlignment="center"
            android:textSize="20sp" />

    </RelativeLayout>
</RelativeLayout>